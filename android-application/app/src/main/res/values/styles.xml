<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
    </style>

    <style name="PopupMenu" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/toolbar_title_color</item>
        <item name="android:itemBackground">@color/colorPrimary</item>
    </style>

    <style name="common_button_text_style">
        <item name="android:textSize">@dimen/wallet_button_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingStart">@dimen/welcome_button_text_padding_start</item>
        <item name="android:paddingTop">@dimen/welcome_button_text_padding_top</item>
        <item name="android:paddingBottom">@dimen/welcome_button_text_padding_bottom</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="common_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/common_button_margin</item>
        <item name="android:layout_marginEnd">@dimen/common_button_margin</item>
    </style>

    <!-- WelcomeActivity -->
    <style name="welcome_description_text_style">
        <item name="android:textColor">@color/common_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/welcome_description_text_size</item>
    </style>

    <!-- OpenWalletActivity -->
    <style name="open_wallet_password_view_style">
        <item name="android:textColor">@color/password_text_color</item>
        <item name="android:textColorHint">@color/password_text_color</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:background">@drawable/edit_text_underline</item>
    </style>

    <style name="open_wallet_text_input_layout_hint" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/password_text_color</item>
        <item name="android:textSize">@dimen/open_wallet_password_hint_size</item>
    </style>

    <style name="open_wallet_text_input_layout" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/open_wallet_password_margin</item>
        <item name="android:layout_marginEnd">@dimen/open_wallet_password_margin</item>
        <item name="android:layout_marginBottom">@dimen/open_wallet_password_margin</item>
        <item name="android:textColorHint">@color/password_text_color</item>
    </style>

    <!-- WalletFragment -->
    <style name="wallet_card_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/common_margin</item>
        <item name="android:layout_marginEnd">@dimen/common_margin</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- TransactionDetails -->
    <style name="transaction_details_title">
        <item name="android:textColor">@color/common_text_color</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/transaction_details_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="transaction_details_sub_title">
        <item name="android:textColor">@color/transaction_details_subtitle_color</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/transaction_details_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingEnd">@dimen/transaction_details_padding</item>
        <item name="android:paddingBottom">@dimen/transaction_details_padding</item>
    </style>

    <style name="transaction_details_value">
        <item name="android:textColor">@color/common_text_color</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/transaction_details_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingBottom">@dimen/transaction_details_padding</item>
    </style>
</resources>
